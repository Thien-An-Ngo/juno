generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnverifiedUser {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
}

model User {
  id               String            @id
  email            String            @unique
  username         String            @unique
  password         String
  role             Role              @default(USER)
  cryptoWatchlists CryptoWatchlist[]
}

enum Role {
  USER
  PREMIUM
  ADMIN
  OWNER
}

model CryptoWatchlist {
  id     String            @id
  User   User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String            @unique
  items  CryptoWatchItem[]
}

model CryptoWatchItem {
  id                String          @id
  CryptoWatchlist   CryptoWatchlist @relation(fields: [CryptoWatchlistId], references: [id], onDelete: Cascade)
  CryptoWatchlistId String          @unique
  symbol            String          @db.VarChar(6)
  baseCurrency      String
  quoteCurrency     String
  stopLoss          Float?
  entry             Float?
  buyingAt          Float?
  boughtOn          DateTime?
  initialProfit     Float?
  takeProfit        Float?
  expiresOn         DateTime?
  notifications     String[]
  note              String?
}
